<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              tools:context=".ui.activity.MyLocationActivity"
              android:fitsSystemWindows="false"
              android:background="@color/colorwhitebackground"
              android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/activity_my_location_iv_main"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/mainpage"/>
    <!--******ORDER******-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/activity_my_location_btn_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/activity_my_location_et_name"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="?selectableItemBackground"
            android:drawableTop="@drawable/map"
            android:letterSpacing="0.1"
            android:padding="10dp"
            android:text="My location"
            android:textColor="@color/colortitletext"
            android:textSize="16dp"
            android:textStyle="bold"/>

    <EditText
        android:id="@+id/activity_my_location_et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_centerInParent="true"
        android:background="@drawable/rectgray"
        android:hint="Select city..."
        android:padding="14dp"
        android:textColor="@color/colorheadtext"
        android:textSize="14dp"
        />

    <Button
        android:id="@+id/activity_my_location_btn_next"
        style="@style/button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/activity_my_location_et_name"
        android:layout_marginTop="20dp"
        android:minWidth="150dp"
        android:text="Next"

        />

    </RelativeLayout>

</LinearLayout>
