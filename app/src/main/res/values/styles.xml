<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBarTheme</item>
        <item name="colorPrimary">@color/complement_color</item>
        <item name="colorPrimaryDark">@color/complement_color</item>
        <item name="colorAccent">@color/complement_color</item>
    </style>


    <style name="MyActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/complement_color</item>
        <item name="background">@color/complement_color</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitle</item>
        <item name="displayOptions">showHome|showTitle</item>
        <item name="titleTextStyle">@style/MyActionBarTitle</item>
    </style>

    <style name="MyActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="button_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:buttonStyle">?android:attr/buttonStyleSmall</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/ripple</item>
    </style>


    <style name="button_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:buttonStyle">?android:attr/buttonStyleSmall</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/ripple_orange</item>
    </style>


    <style name="button_3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:buttonStyle">?android:attr/buttonStyleSmall</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/ripple_green</item>
    </style>

    <style name="button_4">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:buttonStyle">?android:attr/buttonStyleSmall</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/ripple_brown</item>
    </style>

    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">#DDffffff</item>
        <item name="android:textColorSecondary">#8Affffff</item>
        <item name="android:textColorHint">#42ffffff</item>
        <item name="bs_dialogBackground">@color/abc_search_url_text_normal</item>
        <item name="bs_dividerColor">@color/abc_search_url_text_pressed</item>
        <item name="bs_numColumns">4</item>
    </style>

</resources>
